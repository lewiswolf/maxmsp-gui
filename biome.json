{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["**/node_modules/**", "**/dist/**", "**/unused/**"],
		"include": [
			"**/*.css",
			"**/*.html",
			"**/*.js",
			"**/*.json",
			"**/*.jsx",
			"**/*.ts",
			"**/*.d.ts",
			"**/*.tsx"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"a11y": {
				"noNoninteractiveElementToInteractiveRole": "off",
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off",
				"useMediaCaption": "off",
				"useSemanticElements": "off"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noVoid": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"noNamespaceImport": "off",
				"noParameterAssign": "off",
				"useNamingConvention": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"lineWidth": 125,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"lineWidth": 100
		}
	}
}

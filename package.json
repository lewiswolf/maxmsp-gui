{
	"name": "maxmsp-gui",
	"version": "2.4.1",
	"description": "React component library for stylised Max MSP GUI.",
	"author": "Lewis Wolstanholme",
	"license": "Creative Commons SA",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lewiswolf/maxmsp-gui.git"
	},
	"main": "dist/index.js",
	"source": "src/index.ts",
	"types": "dist/index.d.ts",
	"type": "module",
	"engines": {
		"node": ">=10"
	},
	"keywords": [
		"cycling74",
		"max msp",
		"maxmsp"
	],
	"peerDependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@types/node": "^20.14.10",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"@vitejs/plugin-react-swc": "^3.7.0",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"gh-pages": "^6.1.1",
		"prettier": "^3.3.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"sass": "^1.77.6",
		"stylelint": "^16.6.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"typescript": "^5.5.3",
		"vite": "^5.3.3",
		"vite-plugin-css-injected-by-js": "^3.5.1",
		"vite-plugin-dts": "^3.9.1",
		"vite-plugin-svgr": "^4.2.0"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && vite build",
		"dev": "vite build --watch",
		"predeploy": "npm run build && cd example && npm run build",
		"deploy": "gh-pages -d example/dist",
		"example": "cd example && npm run dev",
		"format": "prettier --write . ",
		"test": "tsc && eslint . --ext ts,tsx && stylelint **/*.scss **/*.css"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"es2020": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/strict-type-checked",
			"plugin:@typescript-eslint/stylistic-type-checked",
			"plugin:react-hooks/recommended"
		],
		"ignorePatterns": [
			"dist",
			"unused"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module",
			"project": [
				"./tsconfig.json",
				"./tsconfig.node.json"
			],
			"tsconfigRootDir": "."
		},
		"plugins": [
			"react-refresh"
		]
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "strict",
		"jsxSingleQuote": true,
		"printWidth": 120,
		"quoteProps": "as-needed",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"stylelint": {
		"extends": "stylelint-config-standard-scss",
		"rules": {
			"declaration-empty-line-before": null,
			"no-descending-specificity": null,
			"property-no-vendor-prefix": null,
			"scss/double-slash-comment-empty-line-before": null
		}
	}
}
